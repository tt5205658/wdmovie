<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_148"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/my_attention_shape_item"
        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/dp_10"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/movieimage"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_128"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            fresco:roundedCornerRadius="@dimen/dp_4"
            />
        <TextView
            android:id="@+id/moviename"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/movieimage"
            app:layout_constraintLeft_toRightOf="@id/movieimage"
            fresco:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/moviedate"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/movieimage"
            fresco:layout_constraintBottom_toBottomOf="@id/movieimage"
            fresco:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/moviebrief"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            fresco:layout_constraintTop_toBottomOf="@id/moviename"
            fresco:layout_constraintBottom_toTopOf="@id/moviedate"
            fresco:layout_constraintLeft_toRightOf="@id/movieimage"
            fresco:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="5"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            />
    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>