<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:clipChildren = "false"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"

    android:background="#00000000"
    android:clipChildren = "false"
    android:layout_height="@dimen/dp_123">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/beijing1"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_129"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:roundedCornerRadius="@dimen/dp_4"
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无双"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:id="@+id/name"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <CheckBox
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:id="@+id/attentionImage"
        android:button="@null"
        android:background="@drawable/movielist_attention"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/contentText"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>
</LinearLayout>